<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>TroveXpins - Profile</title>
        
        <!-- <link rel="icon" href="./public/images/trove-logo.png"> -->
		<link
		rel="icon"
		href="https://cdn-icons-png.flaticon.com/512/8853/8853779.png"
		/>

		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<script src="https://cdn.tailwindcss.com"></script>
		<!-- <link rel="stylesheet" href="/public/stylesheets/input.css" />
		<link rel="stylesheet" href="/public/stylesheets/style.css" /> -->
	</head>
    <body>
        <!-- Included Footer -->
		<% include ./partials/header.ejs %>

		<!-- /profile Page Body Starts -->
        <div class="w-full min-h-screen pt-1 text-white bg-zinc-800" class="profile">

			<!-- Hidden Form, to accept profile image as file -->
			<form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
				<input type="file" name="image" id="">
			</form>

			<!-- Profile Details -->
			<div class="flex flex-col items-center justify-center mt-20" class="profdets">
				<div class="relative drop-shadow-lg">
					<span id="uploadicon" class="absolute flex items-center justify-center w-8 h-8 rounded-full bottom-0 right-0 bg-gradient-to-r from-[#b2096f] to-[#3c1053] cursor-pointer ">
						<i class="text-white ri-pencil-fill"></i>
					</span>
					<div class="overflow-hidden rounded-full w-36 h-36 bg-zinc-200 ">
						<img class="object-cover w-full h-full" src="https://i.pinimg.com/236x/a1/df/56/a1df56805ab191b23143dd02b536c060.jpg" alt="Ansh Singh Sonkhia">
					</div>
				</div>
				<h1 class="mt-4 text-3xl font-semibold">Ansh Singh Sonkhia</h1>
				<h3 class="mt-1 text-lg">@anshsinghsonkhia</h3>
				<div class="flex gap-3">
					<a href="/edit" class="px-6 py-2 mt-4 text-base font-medium rounded-full bg-zinc-700 drop-shadow-lg">Edit Profile</a>
					<button class="px-6 py-2 mt-4 text-base font-medium text-white bg-gradient-to-r from-[#b2096f] to-[#3c1053] cursor-pointer rounded-full drop-shadow-lg">Create Pin</button>

				</div>
			</div>

			<!-- Cards -->
			<div class="flex flex-wrap items-center justify-start gap-8 px-10 mx-auto mt-10" class="cards">
				<div class="card1">
					<div class="h-40 overflow-hidden shadow-lg w-60 bg-zinc-200 rounded-xl drop-shadow-lg">
						<img class="object-cover w-full h-full" src="/images/img-troveXpins/girl-school-chair.png" alt="All Pins">
					</div>
					<h3 class="pl-2 mt-2 text-xl font-semibold">All Pins</h3>
					<h5 class="pl-2 text-sm font-medium opacity-60">28 Pins</h5>
				</div>
				
			
			</div>
		</div>
        

        <!-- Included Footer -->
		<% include ./partials/footer.ejs %>

		<!-- Include script -->
		<script>
			document.querySelector("#uploadicon").addEventListener("click", function(){
				document.querySelector("#uploadform input").click();
			})

			document.querySelector("#uploadform input").addEventListener("change", function(){
				document.querySelector("#uploadform").submit();
			})
		</script>


        <script src="" async defer></script>
    </body>
</html>